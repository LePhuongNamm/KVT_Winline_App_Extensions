
<div class="row" style="height: 98%">
    <div class="col-12" style="height: 12.5%; border: 1px solid #000;border-bottom: none">
        <div class="row" style="height: 100%">
            <div class="col-2" style="border-right: 1px solid #000;background-color: gray !important;height: 100%;text-align:center;display: flex;justify-content: center;flex-direction: column;">
                CUS.
            </div>
            <div class="col-10" style="height: 100%;text-align:center;display: flex;justify-content: center;flex-direction: column;">
                @(!string.IsNullOrEmpty(obj.CustomerCo) ? obj.CustomerCo : "-")
            </div>
        </div>
    </div>
    <div class="col-12" style="height: 12.5%; border: 1px solid #000;border-bottom: none">
        <div class="row" style="height: 100%">
            <div class="col-2" style="border-right: 1px solid #000;height: 100%;text-align:center;display: flex;justify-content: center;flex-direction: column;">
                C/N
            </div>
            <div class="col-10" style="height: 100%;text-align:center;display: flex;justify-content: center;flex-direction: column;">
                @($"{obj.SEQ}/{obj.CtBox} BOXES")
            </div>
        </div>
    </div>
    <div class="col-12" style="height: 12.5%; border: 1px solid #000;border-bottom: none">
        <div class="row" style="height: 100%">
