                @(!string.IsNullOrEmpty(obj.SizeName) ? obj.SizeName : "-")
            </div>
        </div>
    </div>
    <div class="col-12" style="height: 12.5%; border: 1px solid #000">
        <div class="row" style="height: 100%">
            <div class="col-2" style="border-right: 1px solid #000;height: 100%;text-align:center;display: flex;justify-content: center;flex-direction: column;background-color: gray !important;">
                Q'TY
            </div>
            <div class="col-10" style="height: 100%;text-align:center;display: flex;justify-content: center;flex-direction: column;">
                @obj.Qty @obj.UMSales
            </div>
        </div>
    </div>
